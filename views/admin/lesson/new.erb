<% form_for @lesson, url_for(:lesson_create), :id => 'new' do |f| %>
    <ul>
      <li>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </li>

      <li>
        <%= f.label :description %>
        <%= f.text_field :description %>
      </li>

      <li>
        <%= f.label :script %>
        <%= f.text_area :script %>
      </li>

      <li>
        <%= f.label :author %>
        <%= f.text_field :author %>
      </li>

        <%= f.submit "Create" %>
    </ul>

<% end %>