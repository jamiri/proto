<div class="box">
  <form class="create-category" method="post">
    <fieldset>

      <legend>

        Add Category

      </legend>

      <% form_for @category, url_for(:category_create), :id => 'new' do |f| %>
          <ul>
            <li>
              <%= f.label :name %>
              <%= f.text_field :name %>
            </li>

            <li>
              <%= f.label :description %>
              <%= f.text_area :description %>
            </li>
            <li>
              <%= f.label :parent %>
              <%= f.text_field :parent %>
            </li>
            <%= f.submit "Create" %>
          </ul>

      <% end %>


    </fieldset>

  </form>
</div>

