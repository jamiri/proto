<div class="post proto">
  <h2>__title__</h2>
  <span class="date">posted on __date__</span>
  <span class="comments"><a href="#dialog__id__">__num__ comments</a></span>
  <p>__content__</p>
</div>

<div class="microblog_comment proto" id="dialog__id__" title="Comments on __title__"></div>

<div class="comment_post proto">
  <span class="id">__user_name__</span> <small>says:</small>
  <p>__comment_body__</p>
</div>

<form class="blog_post_comment_form proto" method="post"
      action="<%= url_for(:new_microblog, :lesson_id => @lesson.id) %>">
  <div class="comment_post">
    <label for="comment" style="font-weight: bold; display: block; padding: 0 10px 0 0;">
      Comment:
      <textarea name="comment[body]" style="padding: 4px; width: 100%;"></textarea>
    </label>
    <div style="text-align: right;">
      <input type="hidden" name="comment[blog_post_id]" value="__blog_post_id__">
      <input type="submit" name="submit" value="Submit" style="margin: 0;">
    </div>
  </div>
</form>
