    <script type="text/javascript">
        $(function () {

            //Tabs
            $("#tabs").tabs();

            // Dialog
            $('#dialog1').dialog({
                autoOpen:false,
                width:600

            });

            $('#dialog2').dialog({
                autoOpen:false,
                width:600

            });

            $('#dialog3').dialog({
                autoOpen:false,
                width:600

            });

            // Dialog Link
            $('#dialog_link1').click(function () {
                $('#dialog1').dialog('open');
                return false;
            });

            $('#dialog_link2').click(function () {
                $('#dialog2').dialog('open');
                return false;
            });

            $('#dialog_link3').click(function () {
                $('#dialog3').dialog('open');
                return false;
            });
        });


    </script>
<% end %>


